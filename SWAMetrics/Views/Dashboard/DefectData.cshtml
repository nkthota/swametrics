
@{
    ViewBag.Title = "Defect Data";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var lastUpdated = ViewBag.LastUpdated;
}


<div class="content">
    <div class="content animate-panel">
        <span class="pull-right">
            Last Updated On: @lastUpdated
        </span>
        <div class="row">
            <div class="col-lg-12">
                <div class="hpanel">
                    <div class="panel-heading">
                        <div class="panel-tools">
                            <a class="showhide"><i class="fa fa-chevron-up"></i></a>
                            <a class="closebox"><i class="fa fa-times"></i></a>
                        </div>
                    </div>
                    <div class="panel-body">
                        <div class="table-responsive">
                            <table id="example" class="display table table-bordered" width="100%">
                                <thead>
                                <tr>
                                    <th>Project</th>
                                    <th>Application</th>
                                    <th>AgeWeek</th>
                                    <th>AgeBiWeek</th>
                                    <th>AgeThreeMonth</th>
                                    <th>AgeOther</th>
                                </tr>
                                </thead>
                                <tfoot>
                                <tr>
                                    <th>Project</th>
                                    <th>Application</th>
                                    <th>AgeWeek</th>
                                    <th>AgeBiWeek</th>
                                    <th>AgeThreeMonth</th>
                                    <th>AgeOther</th>
                                </tr>
                                </tfoot>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Styles {
    @Styles.Render("~/bundles/datatables/css")
}


@section Scripts{
    @Scripts.Render("~/bundles/datatables/js")
    @Scripts.Render("~/bundles/datatablesBootstrap/js")
    @Scripts.Render("~/bundles/datatablesPlugins/js")

    <script>
        $(document).ready(function () {
                var dtTable = $('#example').dataTable({
                    "ajax": {
                        "url": "/Dashboard/LoadDefects",
                        "type": "GET",
                        "datatype": "json"
                    },
                    dom: "<'row'<'col-sm-4'l><'col-sm-4 text-center'B><'col-sm-4'f>>tp",
                    "lengthMenu": [[10, 25, 50, -1], [10, 25, 50, "All"]],
                    buttons: [
                        { extend: 'copy', className: 'btn-sm' },
                        { extend: 'csv', title: 'ExampleFile', className: 'btn-sm' },
                        { extend: 'pdf', title: 'ExampleFile', className: 'btn-sm' },
                        { extend: 'print', className: 'btn-sm' }
                    ],
                    "pageLength": 50,
                    "columns": [                        
                        { "data": "Project", "autoWidth": true }, { "data": "Application", "autoWidth": true },
                        { "data": "AgeWeek", "autoWidth": true }, { "data": "AgeBiWeek", "autoWidth": true },
                        { "data": "AgeThreeMonth", "autoWidth": true }, { "data": "AgeOther", "autoWidth": true }
                    ],
                    initComplete: function () {
                        this.api().columns().every(function () {
                            var column = this;
                            if (column.header().innerText !== 'Edit Data' && column.header().innerText !== 'Data') {
                                var select = $('<select><option value=""></option></select>')
                                    .appendTo($(column.footer()).empty())
                                    .on('change', function () {
                                        var val = $.fn.dataTable.util.escapeRegex(
                                            $(this).val()
                                        );

                                        column
                                            .search(val ? '^' + val + '$' : '', true, false)
                                            .draw();
                                    });

                                column.data().unique().sort().each(function (d, j) {
                                    select.append('<option value="' + d + '">' + d + '</option>')
                                });
                            }
                        });
                    }
            });
            });
    </script>
}

